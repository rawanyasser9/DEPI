@model Student
@{
    Layout = "_MyLayout";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Student</h4>
        </div>
        <div class="card-body">
            <form method="post" action="/Admin/Student/Edit/@Model.StudentId">
                <input type="hidden" name="StudentId" value="@Model.StudentId" />

                <div class="mb-3">
                    <label for="FullName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="FullName" name="FullName" value="@Model.FullName" placeholder="Enter student full name" required />
                </div>

                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" placeholder="Enter student email" required />
                </div>

                <div class="mb-3">
                    <label for="Phone" class="form-label">Phone</label>
                    <input type="text" class="form-control" id="Phone" name="Phone" value="@Model.Phone" placeholder="Enter student phone" />
                </div>

                <div class="mb-3">
                    <label for="DepartmentId" class="form-label">Department</label>
                    <select class="form-select" id="DepartmentId" name="departmentId" required>
                        <option value="">-- Select Department --</option>
                       @foreach(var dept in ViewBag.Department)
                        {
                            <option value="@dept.Id">@dept.Name</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="DateOfBirth" class="form-label">Date of Birth</label>
                    <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" value="@(Model.DateOfBirth)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Gender</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="Gender" value="Male" @(Model.Gender=="Male" ? "checked" : "")>
                            <label class="form-check-label">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="Gender" value="Female" @(Model.Gender=="Female" ? "checked" : "")>
                            <label class="form-check-label">Female</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="/Admin/Student" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
