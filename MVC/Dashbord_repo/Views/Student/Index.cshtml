@model List<Student>

@{
    Layout = "_MyLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f4f6f9;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.05);
        }

        th {
            background: #0d6efd;
            color: #fff;
        }

        td, th {
            vertical-align: middle;
            text-align: center;
        }
    </style>
</head>
<body>
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success">
            @TempData["msg"]
        </div>
    }
    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">📋 Students List</h4>
                <a href="/Admin/Student/Add" class="btn btn-light btn-sm">
                    <i class="mdi mdi-plus"></i> Add Student
                </a>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                         <tr>
                            <td>@item.StudentId</td>
                            <td>@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@item.departmentId</td>
              
                            <td>
                                    <a href="/Admin/Student/Details/@item.StudentId" class="btn btn-sm btn-info"><i class="mdi mdi-eye"></i>  </a>
                                    <a href="/Admin/Student/Edit/@item.StudentId" class="btn btn-sm btn-warning"><i class="mdi mdi-pencil"></i></a>
                                    <a href="/Admin/Student/Delete/@item.StudentId" class="btn btn-sm btn-danger"><i class="mdi mdi-delete"></i></a>
                            </td>
                        </tr>
                        }
                      
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
